<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="2dp"
        android:right="2dp"
        android:top="-2dp">
        <shape android:shape="rectangle" >


            <solid android:color="#FFEFEBEA" />
            <corners android:bottomRightRadius="5dp" android:bottomLeftRadius="5dp"
                android:topRightRadius="15dp" android:topLeftRadius="15dp"></corners>
            <stroke android:width="0dp"></stroke>


            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:drawable="@drawable/rgstyle6"/>


</layer-list>